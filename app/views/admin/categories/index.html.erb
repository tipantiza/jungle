<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
            <tr>
              <td>
                <h4><%= category.name %></h4>
              </td>
              <td>
                <%= link_to fa_icon('trash'), [:new, :admin, :category], class: 'btn btn-sm btn-danger' %>
              </td>
            </tr>
      <%end  %>

      </tbody>
      </table>


  </div>

</section>
